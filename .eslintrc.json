{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "use": true
  },
  "extends": ["prettier", "airbnb-base"],
  "plugins": ["prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "no-console": "off",
    "class-methods-use-this": 0,
    "prettier/prettier": "error"
  }
}
